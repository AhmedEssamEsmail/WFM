{
  "name": "wfm",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --exclude='**/*.comprehensive.test.{ts,tsx}'",
    "test:comprehensive": "vitest run --config vitest.comprehensive.config.ts",
    "test:all": "npm run test:run && npm run test:comprehensive",
    "test:fast": "vitest run --reporter=basic --exclude='**/*.comprehensive.test.{ts,tsx}'",
    "test:unit": "vitest run src/test/hooks src/test/components --reporter=basic --exclude='**/*.comprehensive.test.{ts,tsx}'",
    "test:integration": "vitest run src/test/integration --reporter=basic",
    "test:changed": "vitest run --changed",
    "test:coverage": "vitest run --coverage",
    "coverage:report": "tsx scripts/coverage-report.ts report",
    "coverage:validate": "tsx scripts/validate-coverage.ts",
    "coverage:validate:delta": "tsx scripts/validate-coverage.ts --baseline coverage-baseline.json",
    "coverage:dashboard": "tsx scripts/coverage-dashboard.ts",
    "coverage:dashboard:delta": "tsx scripts/coverage-dashboard.ts --baseline coverage-baseline.json",
    "coverage:gap-report": "tsx scripts/coverage-gap-report.ts",
    "coverage:gap-report:json": "tsx scripts/coverage-gap-report.ts --format json",
    "analyze-coverage": "tsx scripts/analyze-coverage.ts",
    "migrate-tests": "tsx scripts/migrate-test-optimizations.ts",
    "find-slow-tests": "tsx scripts/find-slow-tests.ts",
    "seed-test-data": "tsx src/test/seed-test-data.ts",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:fix": "npm run type-check && npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "@sentry/react": "^10.38.0",
    "@sentry/tracing": "^7.120.4",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.2",
    "lucide-react": "^0.564.0",
    "minimatch": "^10.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fast-check": "^4.5.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
